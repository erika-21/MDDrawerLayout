<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context="com.erikbuttram.dlmasterdetail.CameraActivity">

    <!--
    This layout is a two-pane layout for the MetaValues
    master/detail flow.
    -->

    <fragment android:id="@+id/camera_fragment"
        android:name="com.erikbuttram.dlmasterdetail.CameraFragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:layout="@android:layout/list_content" />

    <FrameLayout android:id="@+id/exifmeta_detail_container"
        android:background="@color/white"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        />

</android.support.v4.widget.DrawerLayout>

